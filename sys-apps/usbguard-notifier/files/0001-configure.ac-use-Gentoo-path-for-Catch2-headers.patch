From 94d0fb4c7c60ce22e47e4d1588085c7c73721fbf Mon Sep 17 00:00:00 2001
From: Rahul Sandhu <nvraxn@gmail.com>
Date: Thu, 26 Jun 2025 10:45:37 +0100
Subject: [PATCH] configure.ac: use Gentoo path for Catch2 headers

Signed-off-by: Rahul Sandhu <nvraxn@gmail.com>
---
 configure.ac | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/configure.ac b/configure.ac
index 319ac37..0a78df1 100644
--- a/configure.ac
+++ b/configure.ac
@@ -138,12 +138,12 @@ if test "x$with_bundled_catch" = xyes; then
     catch_summary="bundled; $catch_CFLAGS $catch_LIBS"
 else
     SAVE_CPPFLAGS=$CPPFLAGS
-    CPPFLAGS="-std=c++11 $CPPFLAGS -I/usr/include/catch"
+    CPPFLAGS="-std=c++11 $CPPFLAGS -I/usr/include/catch2"
     AC_LANG_PUSH([C++])
     AC_CHECK_HEADER([catch.hpp], [], [AC_MSG_FAILURE(catch.hpp not found or not
         usable. Re-run with --with-bundled-catch to use the bundled library.)])
     AC_LANG_POP
-    catch_CFLAGS="-I/usr/include/catch"
+    catch_CFLAGS="-I/usr/include/catch2"
     catch_LIBS=""
     CPPFLAGS=$SAVE_CPPFLAGS
     catch_summary="system-wide;
-- 
